@page
@model MotivationGame.Pages.Game.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Создать игру</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model.Name" class="control-label"></label>
                <input asp-for="Model.Name" class="form-control" />
                <span asp-validation-for="Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.StartDate" class="control-label" type="date"></label>
                <input asp-for="Model.StartDate" class="form-control" />
                <span asp-validation-for="Model.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.FinishDate" class="control-label"></label>
                <input asp-for="Model.FinishDate" class="form-control" />
                <span asp-validation-for="Model.FinishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Stake" class="control-label"></label>
                <input asp-for="Model.Stake" class="form-control" />
                <span asp-validation-for="Model.Stake" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
