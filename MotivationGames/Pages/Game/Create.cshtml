@page
@model MotivationGame.Pages.Game.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Game.Name" class="control-label"></label>
                <input asp-for="Game.Name" class="form-control" />
                <span asp-validation-for="Game.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.StartDate" class="control-label"></label>
                <input asp-for="Game.StartDate" class="form-control" />
                <span asp-validation-for="Game.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.FinishDate" class="control-label"></label>
                <input asp-for="Game.FinishDate" class="form-control" />
                <span asp-validation-for="Game.FinishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.GameType" class="control-label"></label>
                <select asp-for="Game.GameType" class="form-control"></select>
                <span asp-validation-for="Game.GameType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
