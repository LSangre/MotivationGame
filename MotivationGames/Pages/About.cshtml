@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}

<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

<script>
    window.onload = function () {
        var app = new Vue({
            el: '#app',
            data: {
                message: 'Привет, Vue!'
            }
        });
    }   
</script>

<h2>@ViewData["Title"]</h2>
<h3>@Model.Message</h3>
<div id="app">
    <p>{{ message }}</p>
</div>


<p>Use this area to provide additional information.</p>
